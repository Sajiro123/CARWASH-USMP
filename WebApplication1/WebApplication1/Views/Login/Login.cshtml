@model WebApplication1.Models.UserLogin
@{
    Layout = null;
}
    
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V13</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/main.css">


</head>
<body style="background-color: #999999;">   

    <div class="limiter">
        <div class="container-login100">
            <div class="login100-more" style="background-image: url(@Url.Content("~/Content/img/scotiabank1.png"))"></div>
            <div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">
                <div class="login100-form validate-form">
                    <span class="login100-form-title p-b-59">
                        Ingresar
                    </span>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @using (Html.BeginForm("Index_Emp", "Login", FormMethod.Post, new { @class = "form-signin" }))
                    {


                        <div class="wrap-input100 validate-input" data-validate="Username is required">
                            <span class="label-input100">USER</span>

                            @Html.TextBoxFor(a => a.C_USER, new { @class = "input100", @placeholder = "Username..." })
                            @Html.ValidationMessageFor(b => b.C_USER, "")
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Password is required">
                            <span class="label-input100">Password</span>
                            @Html.PasswordFor(a => a._PASSWORD, new { @class = "input100", @placeholder = "************" })
                            @Html.ValidationMessageFor(b => b._PASSWORD, "")

                            <span class="focus-input100"></span>
                        </div>

                        <div class="flex-m w-full p-b-33">
                            <div class="contact100-form-checkbox">
                                <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                                <label class="label-checkbox100" for="ckb1">
                                    <span class="txt1">
                                        Recordar

                                    </span>
                                </label>
                            </div>




                            <span class="focus-input100"></span>
                        </div>
                        <input type="submit" value="Entrar" />

                    }

                </div>
            </div>
        </div>
    </div>





    <script src="~/Content/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/js/animsition.min.js"></script>
    <script src="~/Content/js/main.js"></script>

</body>
</html>

